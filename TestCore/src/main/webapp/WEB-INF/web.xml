<?xml version="1.0" encoding="UTF-8"?>
 <web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>TestCore</display-name>
  <welcome-file-list>
    <welcome-file>/ProposalManager/main</welcome-file>
  </welcome-file-list>
<!-- 필터 -->
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
  <filter-name>encodingFilter</filter-name>
    <url-pattern>/ProposalManager/*</url-pattern>
    <url-pattern>/resources/*</url-pattern>
  </filter-mapping>
<!-- Context파일 로더 -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath*:org/egov/com/context-*.xml</param-value>
  </context-param>
<!-- 디스페처서블릿 파일 로더 : 기본 액션  -->
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
                /WEB-INF/config/action-servlet.xml
      </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>/ProposalManager/main/*</url-pattern>
    <url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
<!-- 디스페처서블릿 파일 로더  : WS 웹소켓 -->
  <servlet>
    <servlet-name>wsAction</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
                /WEB-INF/config/ws-servlet.xml
      </param-value>
    </init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>wsAction</servlet-name>
    <url-pattern>/PMWS/*</url-pattern>
  </servlet-mapping>
<!-- 톰캣 보안 -->  
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <session-config>
        <session-timeout>600</session-timeout>
    </session-config>
<!-- 에러 페이지 -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/ProposalManager/main/error</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/ProposalManager/main/error</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/ProposalManager/main/error</location>
    </error-page>
</web-app>